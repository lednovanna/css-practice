
    
        
        <header class="header row g-0">
            <div class="col-3">
            {{> logo}}
            </div>

            <nav class="header_nav col-9 ">
                <div class="header_nav_right">
                {{>nav list=header}}
                </div>
            </nav>
        </header>

        {{#with main}}
        <div class="main">
             <img src="{{image}}" alt="Main image" class="main_image">
            <div class="main_content">
                <h1 class="main_title">{{heading}}</h1>
                <p class="main_description">{{description}}</p>
                <a class="main_button" href="{{href}}"> {{button}}</a>
            </div>
        </div>
        {{/with}}

        <main class="features">
            {{#each featured}}
           {{> featuredCard data=this}}
            {{/each}}
        </main>
        
        <div class="form">
            {{#each actions}} 
               <div class="form_content">
                <div class="form_title">{{heading}}</div>
                <a class="form_button" href="{{url}}">{{text}}</a>
              </div>  
         {{/each}}
        </div>
       
        
        
        <footer class="row g-0 footer">
          <div class="col-3">
                {{>logo}}
                <span class="footer_copyright">Copyright 2023-2024</span>
            </div>
            {{#each footer}}
            <div class="col-3">
                <span class="footer_title">{{title}}</span>
                {{>nav list=links isVertical=true}}
            </div>
            {{/each}}
        </footer>
 

        
    
